development: &default
  adapter: postgresql
  database: comparitron_development
  pool: 5
  timeout: 5000
  port: <%%= ENV["BOXEN_POSTGRESQL_PORT"] || 5432 %>
  host: localhost
  username: <%= scope.lookupvar('::boxen_user') %>

test:
  <<: *default
  database: comparitron_test<%%= ENV['TEST_ENV_NUMBER'] %>
  min_messages: warning
  port: <%%= ENV["BOXEN_POSTGRESQL_PORT"] || 5432 %>
  host: localhost
  username: <%= scope.lookupvar('::boxen_user') %>

acceptance:
  <<: *default

staging:
  <<: *default

production:
  <<: *default

